<%- include('header') -%>
<body class="bg-image"
style="background-image: url(https://th.bing.com/th/id/OIP.uG-KZxLioHYfVuCLYGIOmAHaEK?w=261&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7);">
  
<div class="text-center center-div" id="login" style="margin-top: 5rem;">
  <div class="container border py-5  " style="max-width: 500px;box-shadow: 1px 1px 5px 5px rgba(0, 0, 0, 0.315);background-color: rgba(0, 0, 0, 0.438);">
    <div class="title pb-5">
      <h2 class="font-weight-bold" style="color: azure;">Sample Login Page</h2>
      <span style="color: azure;">Login using predefined credentials</span>
    </div>
    <form action="/login" method="POST" class="pt-3" id="error">
      <div class="form-group">
        <input
          type="email"
          class="form-control"
          placeholder="email"
          name="email"
        />
      </div>
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="password"
        />
      </div>
      <% if(locals.err_msg) { %>
      <div class="alert alert-danger mt-5" role="alert" }><%=err_msg %></div>
      <% } %>
      <button type="submit" class="btn btn-success rounded-pill mt-5 btn-danger">
        Login
      </button>
    </form>
  </div>
</div>
</body>
</html>